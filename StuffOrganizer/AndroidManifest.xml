<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yaid.stufffinder"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
    
    <uses-permission 
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/iconfindstufftrue"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAIXpUU9e9icz9QH-2e2TtYeX0eihXtYygr1ErCSg" />
        <activity
            android:windowSoftInputMode="adjustResize"
            android:name="com.yaid.stufffinder.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
        	android:name="com.yaid.stufffinder.ItemShowActivity">
        </activity>
        
        <activity
        	android:name="com.yaid.stufffinder.ItemShowWithFragmentsActivity">
        </activity>
        
        <activity
            android:windowSoftInputMode="adjustResize"
            android:name="com.yaid.stufffinder.DateTimeActivity"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar">
            </activity>
    </application>

</manifest>